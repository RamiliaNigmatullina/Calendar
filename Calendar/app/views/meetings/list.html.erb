<%= yield %>
<div class="row">
  <div class="small-8 small-offset-2 columns">
    <% @meetings.each do |meeting| %>
    <h3 class="center"><%= link_to meeting.name, meeting_path(meeting) %></h3>
    <table style="border: 2px solid white">
      <tr>
        <td style="width: 100px">Start time:</td>
        <td><%= meeting.start_time.strftime("%d.%m.%Y") %></td>
      </tr>
      <% if meeting.end_time != nil %>
      <tr>
        <td style="width: 100px">End time:</td>
        <td><%= meeting.end_time.strftime("%d.%m.%Y") %></td>
      </tr>
      <% end %>
      <% if meeting.place != '' && meeting.place != nil %>
      <tr>
        <td valign="top" style="width: 100px">Place:</td>
        <td><%= truncate(meeting.place, :length => 90, :separator => ' ') %></td>
      </tr>
      <% end %>
      <% if meeting.description != '' %>
      <tr>
        <td valign="top" style="width: 100px">Description:</td>
        <td><%= truncate(meeting.description, :length => 90, :separator => ' ') %></td>
      </tr>
      <% end %>
      <tr>
        <td valign="top" style="width: 100px">Autor:</td>
        <td><%= meeting.user.email %></td>
      </tr>
    </table>
    <hr>
    <% end %>
    <%= paginate @meetings %>
  </div>
</div>