.row
  .small-6.small-offset-3.columns
    div id="notice"
      = notice

    h2
      .text-center
        = @meeting.name
    table.white-borders
      tr
        td.width-100
          | Start time:
        td = @meeting.start_time.strftime("%d.%m.%Y")
      - if @meeting.end_time != nil
        tr
          td.width-100
            | End time:
          td = @meeting.end_time.strftime("%d.%m.%Y")
      - if @meeting.place != '' && @meeting.place != nil
        tr
          td.width-100 valign="top"
            | Place:
          td = truncate(@meeting.place, :length => 90, :separator => ' ')
      - if @meeting.description != ''
        tr
          td.width-100 valign="top"
            | Description:
          td = truncate(@meeting.description, :length => 90, :separator => ' ')
      tr
        td.width-100 valign="top"
          | Autor:
        td
          dfn
            = link_to @meeting.user.email, user_show_path(@meeting.user)
    br
    .text-center
      = link_to 'Edit', edit_meeting_path(@meeting), class: "button"
      |  
      = link_to 'Destroy', meeting_path, method: :delete, class: "hollow button alert"
      |  
      = link_to 'Back', :back , class: "hollow button"
