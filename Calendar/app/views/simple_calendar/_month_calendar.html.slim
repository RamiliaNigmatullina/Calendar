.simple-calendar
  table
    tr
      td.text-left[style="border-color: white"]
        h3 = link_to "<", calendar.url_for_previous_view
      td.text-center[style="border-color: white"]
        h3
          = I18n.t("date.month_names")[start_date.month]
          |  
          = start_date.year
      td.text-right[style="border-color: white"]
        h3 = link_to ">", calendar.url_for_next_view
  table.table-striped
    thead
      tr
        - date_range.slice(0, 7).each do |day|
          th.font-weight-200[style="text-align:center"]
            = I18n.t("date.day_names")[day.wday]
    tbody
      - date_range.each_slice(7) do |week|
        tr
          - week.each do |day|
            = content_tag :td, class: calendar.td_classes_for(day) do
              - if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block)
                - capture_haml do
                  - block.call day, sorted_events.fetch(day, [])
              - else
                - block.call day, sorted_events.fetch(day, [])
